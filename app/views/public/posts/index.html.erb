<section class="wrapper flex">
	<div class="sidebar">
		<h3>カテゴリ一覧</h3>
		<% @categories.each do |categories| %>
			<%= link_to categories.name, posts_path(category_id: categories.id) %>
		<% end %>
	    <h3>タグ一覧</h3>
		<% @tag_list.each do |tag| %>
			<%= link_to tag.name, posts_path(tag_id: tag.id) %>
		<% end %>
	</div>
	<div class="content">
		<% if params[:category_id] %>
			<h2 class="section-ttl"><%= @category.name %>の投稿一覧 (全<%= @all_posts_count %>件)</h2>
		<% elsif params[:tag_id] %>
			<h2 class="section-ttl"><%= @tag.name %>の投稿一覧 (全<%= @all_posts_count %>件)</h2>
		<% else %>
			<h2 class="section-ttl">投稿一覧 (全<%= @all_posts_count %>件)</h2>
		<% end %>
			<div class="posts">
				<% @posts.each do |post| %>
					<%= link_to posts_path(post) do %>
					  <% post.images.first(1).each do |image| %>
               <%= attachment_image_tag image, :image, format: 'jpg', size: "100x100" %>
            <% end %>
           	<div><%= link_to post.title, post_path(post)%></div>
           	<div><%= post.body %></div>
           	<div><%= post.review %></div>
					　<div><%= post.category.name %></div>
					<% end %>
				<% end %>
			</div>
	</div>
</section>
