<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ユーザー情報編集画面
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
       <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
        <div class="field">
          <%= f.label :"姓" %>
          <p class="control has-icons-left">
           <%= f.text_field :first_name, autofocus: true, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :"名" %>
          <p class="control has-icons-left">
           <%= f.text_field :last_name, autofocus: true, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :"セイ" %>
          <p class="control has-icons-left">
           <%= f.text_field :first_name_kana, autofocus: true, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :"メイ" %>
          <p class="control has-icons-left">
           <%= f.text_field :last_name_kana, autofocus: true, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :メールアドレス, class: "label" %>
          <p class="control has-icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :会員ステータス, class: "label" %>
          <p class="control has-icons-left">
           <%= f.radio_button :is_active, :true %><%= f.label :is_active, "有効" %><%= f.radio_button :is_active,  :false  %><%= f.label :is_active, "退会" %>
          </p>
        </div>
        <div class="actions">
          <%= f.submit "編集する", class: "button is-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
